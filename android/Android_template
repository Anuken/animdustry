LOCAL_PATH:= $(call my-dir)
include $(CLEAR_VARS)
 
LOCAL_MODULE    := absurd
LOCAL_C_INCLUDES := ${NIM_INCLUDES}
 
LOCAL_CFLAGS := $(LOCAL_C_INCLUDES:%=-I%) -O2 -Wall -D__ANDROID__ -DSOLOUD_OGG_ONLY
LOCAL_CPPFLAGS := $(LOCAL_C_INCLUDES:%=-I%) -DWITH_OPENSLES -O2 -Wall -D__ANDROID__ -DSOLOUD_OGG_ONLY
LOCAL_LDLIBS := -lm -llog -lOpenSLES -lEGL -lGLESv2 -landroid
LOCAL_ARM_MODE  := arm
 
LOCAL_SRC_FILES := ${NIM_SOURCES}
 
include $(BUILD_SHARED_LIBRARY)
